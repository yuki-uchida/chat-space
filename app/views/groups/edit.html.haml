.chat-group-form
  %h1 チャットグループ編集
  = form_for @group do |f|
    .chat-group-form__errors
      = render 'error-message'
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        = f.label "#{@group.group_name}グループです"
      .chat-group-form__field--right
        = f.text_field :group_name, class: "chat-group-form__input", placeholder: "グループ名を入力してください", type: "string"
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        %label.chat-group-form__label{:for => "chat_group_チャットメンバーを追加"} チャットメンバーを追加
      .chat-group-form__field--right
        .chat-group-form__search.clearfix
          %input#user-search-field.chat-group-form__input{:placeholder => "追加したいユーザー名を入力してください", :type => "text"}/
        #user-search-result


    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        = f.label "チャットメンバー"
      .chat-group-form__field--right
        #chat-group-users
          #chat-group-user-22.chat-group-user.clearfix
            = current_user.name
            = f.hidden_field :user_ids, value: current_user.id, name: 'group[user_ids][]'
            = render partial: 'groups/user', collection: @group.users.where.not(id: current_user.id)
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
      .chat-group-form__field--right
        = f.submit "保存する", class: "chat-group-form__action-btn"












